<div class="link-grid">
<DollLink />
<HandLink />
<BellLink />
<CardLink />
</div>

<style>
</style>

<style is:global>
	/* On small screens, let each link participate in normal flow and stack vertically */
	@media (max-width: 900px) {
		.link-grid {
			display: flex;
			flex-direction: column;
			gap: 1rem;
			width: 100%;
		}

		/* Make each absolutely-positioned link become static and full-width */
		.link-grid :is(.doll-link, .hand-link, .bell-link, .card-link) {
			position: static !important;
			display: block !important;
			width: 100% !important;
			max-width: 100% !important;
			right: auto !important;
			top: auto !important;
		}

		/* Ensure the images inside links are responsive */
		.link-grid :is(.doll-link, .hand-link, .bell-link, .card-link) img {
			width: 100% !important;
			height: auto !important;
			display: block;
		}

		/* Give each link a visible container box so page elongates */
		.link-grid :is(.doll-link, .hand-link, .bell-link, .card-link) {
			padding: 0.6rem;
			border-radius: 8px;
			background: rgba(255,255,255,0.02);
			border: 1px solid rgba(255,255,255,0.04);
		}
	}
</style>
</style>


